$block-domain := 'cp' // TODO: set your block name

block($name, $domain = $block-domain) {
  / .{$domain}-{$name} {
    {block}
  }
}

element($name) {
  $name = '__' + $name
  $caller = called-from[0]
  if $caller in ('element' 'modifier') {
    // Use the latest caller as prefix
    & ^[0]{$name} {
      {block}
    }
  }
  else {
    &{$name} {
      {block}
    }
  }
}

modifier($name, $val = null) {
  $val = $val && '-' + $val
  $name = '_' + $name
  $name = $val ? $name + $val:$name
  &{$name} {
    {block}
  }
}
