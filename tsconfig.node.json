{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@": [
        "src"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "declaration": false,
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "./**/*.js",
    "./**/*.spec.ts"
  ]
}
